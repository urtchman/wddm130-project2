<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head.ejs')%>
</head>
<body class="bg-gray-100 flex flex-col min-h-screen">
    <%- include('partials/header.ejs')%>

    <!-- Main Content -->
    <main class="container mx-auto p-6 flex-1">
        <!-- About Card -->
        <section class="max-w-7xl mx-auto bg-white p-8 rounded-lg shadow-lg">
            <h1 class="text-4xl font-bold text-blue-700 mb-4 text-center">About Naira Swap</h1>
            <p class="text-gray-600 text-lg text-center mb-6">
                <%=content.intro%> 
            </p>

            <!-- Mission, Vision, Core Values -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <!-- Mission -->
                <div class="bg-blue-50 p-6 rounded-lg shadow-md">
                    <h2 class="text-2xl font-semibold text-blue-600">Our Mission</h2>
                    <p class="text-gray-700 mt-2">
                        <%=content.mission%>
                    </p>
                </div>

                <!-- Vision -->
                <div class="bg-blue-50 p-6 rounded-lg shadow-md">
                    <h2 class="text-2xl font-semibold text-blue-600">Our Vision</h2>
                    <p class="text-gray-700 mt-2">
                        <%=content.vision%>
                    </p>
                </div>

                <!-- Core Values -->
                <div class="col-span-1 md:col-span-2 bg-gray-50 p-6 rounded-lg shadow-md">
                    <h2 class="text-2xl font-semibold text-blue-600 text-center">Our Core Values</h2>
                    <ul class="list-disc list-inside text-gray-700 mt-2 text-lg">
                        <% content.coreValues.forEach(value => { %>
                            <li>
                                <span class="font-bold"><%= value.title %>:</span> <%= value.desc %>
                            </li>
                        <% }); %>
                    </ul>
                </div>
                
                <!-- Why Choose Us -->
                <div class="col-span-1 md:col-span-2 bg-white p-6 rounded-lg shadow-md">
                    <h2 class="text-2xl font-semibold text-blue-600 text-center">Why Choose Naira Swap?</h2>
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mt-4">
                        <div class="text-center">
                            <img src="/images/fast.png" alt="Fast Transactions" class="w-16 mx-auto mb-2">
                            <p class="text-lg font-medium">Fast Transactions</p>
                        </div>
                        <div class="text-center">
                            <img src="/images/security.png" alt="Secure Payments" class="w-16 mx-auto mb-2">
                            <p class="text-lg font-medium">Secure Payments</p>
                        </div>
                        <div class="text-center">
                            <img src="/images/best-rates.png" alt="Best Exchange Rates" class="w-16 mx-auto mb-2">
                            <p class="text-lg font-medium">Best Exchange Rates</p>
                        </div>
                    </div>
                </div>
            </div>
        </section> 
    </main>

    <%- include('partials/footer.ejs')%>
</body>
</html>
