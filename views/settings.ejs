<%- include('partials/dashboard-top.ejs')%>

  <!-- Settings Section -->
  <div class="flex-grow container mx-auto px-4 py-6">
    <div class="bg-white p-6 rounded-lg shadow-lg max-w-lg mx-auto">
      <h2 class="text-2xl font-bold mb-4">Settings</h2>
      <form>
        <div class="mb-4">
          <label for="name" class="block font-medium">Full Name:</label>
          <input type="text" id="name" class="w-full p-3 border rounded-lg" value="<%= user.name %>">
        </div>
        <div class="mb-4">
          <label for="email" class="block font-medium">Email:</label>
          <input type="email" id="email" class="w-full p-3 border rounded-lg" value="<%= user.email %>">
        </div>
        <div class="mb-4">
            <label for="phone" class="block font-medium">Phone:</label>
            <input type="tel" id="phone" class="w-full p-3 border rounded-lg" value="<%= user.phone %>">
          </div>
        <div class="mb-4">
          <label for="password" class="block font-medium">New Password:</label>
          <input type="password" id="password" class="w-full p-3 border rounded-lg" placeholder="Enter new password">
        </div>
        <button class="w-full bg-blue-600 text-white py-3 rounded-lg hover:bg-blue-700">Save Changes</button>
      </form>
    </div>
  </div>

  <%- include('partials/dashboard-bottom.ejs')%>