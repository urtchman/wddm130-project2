<%- include('partials/dashboard-top.ejs')%>

  <!-- Body Content -->
  <div class="flex-grow container mx-auto px-4 py-6">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      <!-- Card 1 NGN -->
      <div class="bg-white p-6 rounded-lg shadow-lg text-center">
        <h3 class="text-xl font-semibold mb-4">EUR</h3>
        <p class="text-4xl font-bold">€ <%=wallet.euro%></p>
      </div>

      <!-- Card 2 CAD -->
      <div class="bg-white p-6 rounded-lg shadow-lg text-center">
        <h3 class="text-xl font-semibold mb-4">CAD</h3>
        <p class="text-4xl font-bold">$ <%=wallet.cad%></p>
      </div>

      <!-- Card 3 USD -->
      <div class="bg-white p-6 rounded-lg shadow-lg text-center">
        <h3 class="text-xl font-semibold mb-4">USD</h3>
        <p class="text-4xl font-bold">$ <%=wallet.usd%></p>
      </div>

      <!-- Card 4 GBP -->
      <div class="bg-white p-6 rounded-lg shadow-lg text-center">
        <h3 class="text-xl font-semibold mb-4">GBP</h3>
        <p class="text-4xl font-bold">£ <%=wallet.gbp%></p>
      </div>
    </div>

    <!-- Additional Card for EUR -->
    <div class="bg-white p-6 rounded-lg shadow-lg text-center mt-6">
      <h3 class="text-xl font-semibold mb-4">NGN</h3>
      <p class="text-4xl font-bold">₦ <%=wallet.naira%></p>
      <div><a href="/dashboard/swap" class="dash-link-btn dash-link-primary">Swap Naira</a> <a href="/dashboard/deposit" class="dash-link-btn dash-link-primary">Deposit Naira</a></div>
    </div>
  </div>

  <%- include('partials/dashboard-bottom.ejs')%>
